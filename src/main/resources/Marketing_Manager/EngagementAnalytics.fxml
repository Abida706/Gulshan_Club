<AnchorPane prefHeight="509.0" prefWidth="765.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gulshan_club.Marketing_Manager.Controller.EngagementAnalyticsController">
   <children>
      <Label layoutX="246.0" layoutY="35.0" text="Engagement Analytics" textFill="#0f6e35">
         <font>
            <Font name="System Bold" size="22.0" />
         </font></Label>
      <DatePicker fx:id="fromDatePicker" layoutX="61.0" layoutY="108.0" promptText="From" />
      <DatePicker fx:id="toDatePicker" layoutX="61.0" layoutY="153.0" promptText="To" />
      <Button layoutX="41.0" layoutY="403.0" mnemonicParsing="false" onAction="#handleExportButton" style="-fx-background-color: gray;" text="Export" />
      <Button layoutX="654.0" layoutY="416.0" mnemonicParsing="false" onAction="#handleBackButton" style="-fx-background-color: gray;" text="Back" />
      <Button layoutX="423.0" layoutY="326.0" mnemonicParsing="false" onAction="#handlegenerateReportButton" style="-fx-background-color: gray;" text="Generate Report" />
      <TableView fx:id="analyticsTable" layoutX="423.0" layoutY="108.0" prefHeight="200.0" prefWidth="303.0">
        <columns>
          <TableColumn fx:id="metricCol" prefWidth="75.0" text="Metric" />
          <TableColumn fx:id="valueCol" prefWidth="75.0" text="Value" />
            <TableColumn fx:id="dateRangeCol" prefWidth="75.0" text="Date Range" />
            <TableColumn fx:id="remarksCol" prefWidth="75.0" text="Remarks" />
        </columns>
      </TableView>
      <BarChart fx:id="engagementBarChart" layoutX="14.0" layoutY="208.0" prefHeight="200.0" prefWidth="279.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
   </children>
</AnchorPane>
